<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:background="@color/cardview_dark_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/roomivrl2"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/roomivrl2"
                android:paddingTop="10dp">
                <TextView
                    android:id="@+id/tv1rl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Room Name:"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/roomnamerl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1rl2"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:id="@+id/tv2rl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/roomnamerl2"
                    android:layout_alignParentLeft="true"
                    android:text="Room Size:"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/roomsizerl2"
                    android:layout_below="@+id/tv2rl2"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv3rl2"
                    android:text="Room No:"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/roomnumberrl2"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv3rl2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv4rl2"
                    android:text="No of Beds:"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/roomnumberrl2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/noofbedsrl2"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv4rl2"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:text="delete"
                    android:textSize="10dp"
                    android:id="@+id/delbtnrl2"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>