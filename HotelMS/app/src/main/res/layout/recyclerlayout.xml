<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:background="@color/cardview_dark_background">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/roomiv"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/roomiv"
                android:paddingTop="10dp">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Room Name:"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/roomname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/roomname"
                    android:layout_alignParentLeft="true"
                    android:text="Room Size:"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/roomsize"
                    android:layout_below="@+id/tv2"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv3"
                    android:text="Room No:"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/roomnumber"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv4"
                    android:text="No of Beds:"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/roomnumber"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/noofbeds"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv4"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:text="Book"
                    android:textSize="10dp"
                    android:id="@+id/bookbtn"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />
                <Button
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:text="delete"
                    android:textSize="10dp"
                    android:id="@+id/delbtn"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/bookbtn" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>